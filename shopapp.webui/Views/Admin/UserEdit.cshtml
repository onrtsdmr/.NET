@model UserDetailsModel

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<!-- Script -->

<div class="card pr-4 shadow">
    <div class="container m-4 p-4">
        <h1 class="h3">Edit User</h1>
        <img src="~/img/logo.png" alt="" class="w-25 p-3">
        <form asp-controller="Admin" asp-action="UserEdit" method="POST">

            <div class="row">
                <div class="col-md-8">
                    <input type="hidden" name="UserId" value="@Model.UserId"/>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="FirstName"></label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" class="form-control" placeholder="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="LastName"></label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" class="form-control" placeholder="LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="UserName"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control" placeholder="UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2" asp-for="Email"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    @foreach (var rolenames in ViewBag.Roles)
                    {
                        <div class="row pl-5 custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input"
                                   id="@rolenames"
                                   name="selectedRoles"
                                   value="@rolenames"
                                   @(Model.SelectedRoles.Any(i => i == rolenames) ? "checked" : "")>
                            <label class="custom-control-label" for="@rolenames">@rolenames</label>
                        </div>
                    }
                    <hr/>
                    <div class="row custom-control custom-checkbox pl-5">
                        <input type="checkbox" asp-for="EmailConfirmed" class="form-check-input" placeholder="EmailConfirmed">
                        <label asp-for="EmailConfirmed" class="form-check-label"></label>

                    </div>
                </div>
            </div>

            <div class="form-group d-flex flex-row-reverse">
                <button class="btn btn-success my-2 my-sm-0" type="submit">Save Changes</button>
            </div>

        </form>
    </div>
</div>