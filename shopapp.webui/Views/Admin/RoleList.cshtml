@model IEnumerable<IdentityRole>

<div class="table-responsive row">
    <div class="col-md-12">
        <h1>
            Admin Role List
        </h1>
        <hr>
        <a class="btn btn-primary btn-sm" asp asp-controller="Admin" asp-action="RoleCreate">Add Role</a>
        <hr>
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td></td>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-controller="Admin" asp-action="RoleEdit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <a asp-controller="Admin" asp-action="RemoveRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm mr-2">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <h3>There is no role registered in the system.</h3>
                </div>
            }

            </tbody>
        </table>
    </div>
</div>