@model ProductModel

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="card pr-4 shadow">
    <div class="container m-4 p-4">
        <h1 class="h3">Create Product</h1>
        <img src="~/img/logo.png" alt="" class="w-25 p-3">
        <form asp-controller="Admin" asp-action="CreateProduct" method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" asp-for="Url"></label>
                <div class="col-sm-10">
                    <input asp-for="Url" class="form-control" placeholder="Name">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" asp-for="Price"></label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" placeholder="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" asp-for="Description"></label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" value="" class="form-control" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2" asp-for="ImageUrl"></label>
                <div class="col-sm-10">
                    <input asp-for="ImageUrl" value="" class="form-control" placeholder="ImageUrl">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success my-2 my-sm-0" type="submit">Create</button>
            </div>
            @* <div class="form-group">
                <label for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    <option selected disabled>Seçiniz</option>
                    @foreach (var item in @ViewBag.Categories)
                    {
                        <option value="@item.CategoryId">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div> *@
        </form>
    </div>
</div>