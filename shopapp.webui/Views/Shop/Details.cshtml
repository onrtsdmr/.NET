@model ProductDetailModel

<div class="card m-4">
    <div class="row no-gutters">
        <div class="col-md-4">
            <a asp-controller="Shop" asp-action="RemoveProduct" asp-route-id="@Model.Product.ProductId"
               class="fas fa-trash fa-x2 product-remove-btn p-3">
            </a>
            <img src="~/img/@Model.Product.ImageUrl" class="card-img p-3" alt="@Model.Product.Name">
        </div>
        <div class="col-md-8">
            <div class="card-body ">
                <div class="justify-content-stretch">
                    <h5 class="card-title">@Model.Product.Name</h5>
                    <div class="">
                        @foreach (var item in Model.Categories)
                        {
                            <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
                        }
                    </div>
                    <p class="card-text">@Html.Raw(Model.Product.Description)</p>
                    <div class="d-flex justify-content-between">
                        <h5 class="card-text start">@Model.Product.Price₺</h5>
                        <a asp-controller="Shop" asp-action="AddToCart" asp-route-id="@Model.Product.ProductId" class="btn btn-primary end">Buy</a>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <p class="card-text">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </p>
            </div>
        </div>
    </div>
</div>
<div class="card text-center m-4">
    <div class="card-header">
        <div class="container">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link " href="#">Ürün Açıklaması</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">Yorumlar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Taksit Seçenekleri</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Alışveriş Kredisi</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">İade Koşulları</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="card-body">
        <p class="card-text">Yorumlar</p>
    </div>
</div>