@model List<Product>

<div class="container">
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Herhangi bir ürün bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row card">
            @foreach (var item in Model)
            {
                <div class="mb-3" style="height: 280px;">
                    <div class="row no-gutters">
                        <div class="col-md-2">
                            <img class="card-img img-fluid" src="~/img/@item.ImageUrl" alt="">
                        </div>
                        <div class="col-md-10">
                            <div class="card-body">
                                <h5 class="card-title">@item.Name</h5>
                                <small class="text-muted">
                                    <i class="fas fa-lira-sign"></i>@item.Price
                                </small>
                            </div>
                            <div class="card-footer text-center d-flex justify-content-end">
                                <a asp-controller="shop" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-outline-primary ">Details</a>
                                <a asp-controller="shop" asp-action="RemoveToCart" asp-route-id="@item.ProductId" class="btn btn-success ml-1">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <a class="btn btn-outline-success" asp-controller="Shop" asp-action="BuyCart">Buy</a>
        </div>
    }
</div>