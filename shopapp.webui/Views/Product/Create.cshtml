@model Product

@* Burada asp-for içine modeldeki prop isimlerini vermek gerekiyor aynı olmalı !!*@

<div class="card pr-4 shadow">
    
    <div class="container m-4 p-4">
        <img src="~/img/logo.png" alt="" class="w-25 p-3">
        <form method="POST">
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <div class="form-group">
                <label for="Name">Name</label>
                <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input asp-for="Price" value="@Model.Price" class="form-control" placeholder="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea asp-for="Description" value="@Model.Description" class="form-control" placeholder="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ImageUrl">Image URL</label>
                <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" placeholder="ImageUrl">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    <option selected disabled>Seçiniz</option>
                    @foreach (var item in @ViewBag.Categories)
                    {
                        <option value="@item.CategoryId">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div> *@
            <button class="btn btn-success my-2 my-sm-0" type="submit">Create</button>
        </form> 
    </div>
</div>