@model PageInfo

<nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a 
                                  class="page-link"
                                  asp-controller="Shop"
                                  asp-action="List"
                                  asp-route-page="@(Model.CurrentPage - 1)">Previous</a></li>
        @for (var item = 1; item<Model.TotalPages()+1 ; item++)
        {
            <li class="page-item @(item==Model.CurrentPage ? "active" : "" )"><a 
                                      class="page-link" 
                                      asp-controller="Shop" 
                                      asp-action="List" 
                                      asp-route-page="@(item<=0 ? item=1 : item)">@item</a></li>
        }
        <li class="page-item"><a 
                                  class="page-link"
                                  asp-controller="Shop"
                                  asp-action="List"
                                  asp-route-page="@(Model.CurrentPage + 1)">Next</a></li>
    </ul>
</nav>